<UserControl x:Class="AlarmClock.Modules.ViewModules.Views.MainViewWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"     
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid >
        
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
        <md:Card UniformCornerRadius="6" Width="auto" HorizontalAlignment="Center" MinWidth="500" MinHeight="200">
                <StackPanel>
                    <Label Foreground="White" FontSize="26" Content="{Binding DateLabel}" HorizontalAlignment="Center"/>
                    <Separator/>
                    <Label Foreground="White" FontSize="120" Content="{Binding ClockLabel}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -30 0 -30"/>
                </StackPanel>
            </md:Card>
        </StackPanel>
    </Grid>
</UserControl>
